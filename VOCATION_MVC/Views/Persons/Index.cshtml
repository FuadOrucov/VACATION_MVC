@model IEnumerable<VOCATION_MVC.Models.Tbl_Persons>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Persons List</h2>

<p>
    @Html.ActionLink("New Person", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tbl_Departments.ShortName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tbl_Positions.Position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tbl_Rols.RoleName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tbl_Departments.ShortName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tbl_Positions.Position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tbl_Rols.RoleName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
