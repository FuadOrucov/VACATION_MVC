@model IEnumerable<VOCATION_MVC.Models.Tbl_Account>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Tbl_Persons.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tbl_Persons.Surname)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Tbl_Persons.Tbl_Departments.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tbl_Persons.Tbl_Positions.Position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tbl_Persons.Tbl_Rols.RoleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tbl_Persons.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Tbl_Persons.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tbl_Persons.Tbl_Departments.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tbl_Persons.Tbl_Positions.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tbl_Persons.Tbl_Rols.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>

        </tr>
    }

</table>
