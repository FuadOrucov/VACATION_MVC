@model IEnumerable<VOCATION_MVC.Models.Tbl_UseVacationCount>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tbl_Persons.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsedVacationDaysCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Regdate)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tbl_Persons.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsedVacationDaysCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Regdate)
            </td>

            @if (User.IsInRole("A"))
            {
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            }
        </tr>
    }

</table>
