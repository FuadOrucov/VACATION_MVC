<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mvc</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">


                    <li>@Html.ActionLink("Profile", "GetProfile", "Persons", new { mail = @HttpContext.Current.User.Identity.Name }, new { @class = "mt-3" })</li>


                    @if (User.IsInRole("A"))
                    {
                        <li>@Html.ActionLink("Persons", "Index", "Persons")</li>
                        <li>@Html.ActionLink("Positions", "Index", "Positions")</li>
                    }

                    <li>@Html.ActionLink("Department", "Index", "Departments")</li>
                    @if (User.IsInRole("A"))
                    {
                        <li>@Html.ActionLink("Use Vacation Count", "Index", "UseVacationCount", new { mail = @HttpContext.Current.User.Identity.Name }, new { @class = "mt-3" })</li>
                    }
                    @if (User.IsInRole("U"))
                    {
                        <li>@Html.ActionLink("Use Vacation Count", "GetOneUseDays", "UseVacationCount", new { mail = @HttpContext.Current.User.Identity.Name }, new { @class = "mt-3" })</li>
                    }

                    @if (User.IsInRole("A"))
                    {
                        <li>@Html.ActionLink("Appeals", "Index", "VacationAppeals")</li>
                    }


                    <li>@Html.ActionLink("New Appeals", "Create", "VacationAppeals", new { mail = @HttpContext.Current.User.Identity.Name }, new { @class = "mt-3" })</li>

                    <li>@Html.ActionLink("Vacation Dasy", "Index", "VacationDays")</li>

                   

                        <li>@Html.ActionLink("Result Appeal", "GetStatus", "VacationAppeals", new { mail = @HttpContext.Current.User.Identity.Name }, new { @class = "mt-3" })</li>


                    @if (User.IsInRole("A"))
                    {
                        <li>@Html.ActionLink("Rols", "Index", "Rols")</li>
                        <li>@Html.ActionLink("Account", "Index", "Account")</li>
                    }

                    <li>@Html.ActionLink("LogOut", "LogOut", "Login")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content " style="margin-top:20px">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
