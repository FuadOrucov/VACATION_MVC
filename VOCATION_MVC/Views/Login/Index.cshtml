@model VOCATION_MVC.Models.Tbl_Account
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Login</title>

    <link href="~/LoginFolder/css/bootstrap.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h2>Sign In</h2>

        <h2 style="color:red">@ViewBag.message</h2>

        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
        {
               <div class="form-group">
                   @Html.LabelFor(m => m.Mail)
                   @Html.TextBoxFor(m => m.Mail, new { @class = "form-control", placeholder = "Mail-i daxil edin" })

               </div>

               <div class="form-group">
                   @Html.LabelFor(m => m.Password)
                   @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Şifrəni daxil edin" })

                   <br />
                   <button type="submit" class="btn  btn-default">Daxil ol</button>
               </div>
        }
    </div>
</body>
</html>
